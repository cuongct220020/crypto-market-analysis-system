# Sử dụng Base Image chính thức như bạn mong muốn
FROM apache/spark:3.5.0

USER root

# Định nghĩa thư mục chứa JARs của Spark (Image apache/spark dùng đường dẫn này)
ENV SPARK_JARS_DIR=/opt/spark/jars

# =======================================================
# 1. MINIO / S3 INTEGRATION (Quan trọng nhất)
# Spark 3.5 dùng Hadoop 3.3.4. Phải tải đúng version này.
# =======================================================
ADD https://repo1.maven.org/maven2/org/apache/hadoop/hadoop-aws/3.3.4/hadoop-aws-3.3.4.jar $SPARK_JARS_DIR/
ADD https://repo1.maven.org/maven2/com/amazonaws/aws-java-sdk-bundle/1.12.262/aws-java-sdk-bundle-1.12.262.jar $SPARK_JARS_DIR/

# =======================================================
# 2. KAFKA INTEGRATION (Structured Streaming)
# =======================================================
ADD https://repo1.maven.org/maven2/org/apache/spark/spark-sql-kafka-0-10_2.12/3.5.0/spark-sql-kafka-0-10_2.12-3.5.0.jar $SPARK_JARS_DIR/
ADD https://repo1.maven.org/maven2/org/apache/kafka/kafka-clients/3.4.1/kafka-clients-3.4.1.jar $SPARK_JARS_DIR/
ADD https://repo1.maven.org/maven2/org/apache/spark/spark-token-provider-kafka-0-10_2.12/3.5.0/spark-token-provider-kafka-0-10_2.12-3.5.0.jar $SPARK_JARS_DIR/
ADD https://repo1.maven.org/maven2/org/apache/commons/commons-pool2/2.11.1/commons-pool2-2.11.1.jar $SPARK_JARS_DIR/

# =======================================================
# 3. CLICKHOUSE INTEGRATION
# =======================================================
ADD https://repo1.maven.org/maven2/com/clickhouse/clickhouse-jdbc/0.6.0/clickhouse-jdbc-0.6.0-all.jar $SPARK_JARS_DIR/

# =======================================================
# 4. Phân quyền (Permission Fix)
# Image apache/spark chạy bằng user ID 185, nên phải cấp quyền đọc cho nó
# =======================================================
RUN chmod 644 $SPARK_JARS_DIR/*.jar

# Quay lại user mặc định của image để đảm bảo bảo mật
USER spark