# App Settings
APP_NAME="Crypto Market Analysis System"
DEBUG=False
LOG_LEVEL=INFO

# Ethereum Streaming Settings
RPC_PROVIDER_URIS=
RPC_BATCH_REQUEST_SIZE=5
RPC_REQUEST_RATE_SLEEP=1.5
STREAMER_CHUNK_SIZE=100
STREAMER_QUEUE_SIZE=5
STREAMER_NUM_WORKER_PROCESS=1

# Streamer Settings
STREAMER_PERIOD_SECONDS=5
STREAMER_BLOCK_BATCH_SIZE=1000
STREAMER_RETRY_ERRORS=True
STREAMER_ENTITY_TYPES=block,transaction,receipt,token_transfer

# Kafka Settings
KAFKA_OUTPUT=kafka/localhost:9092,localhost:9093,localhost:9094
KAFKA_TOPIC_PREFIX=crypto.raw.eth.
SCHEMA_REGISTRY_URL=http://localhost:8881

# Kafka Producer Settings
# Linger Time: Đợi 100ms để gom batch (tăng throughput)
KAFKA_PRODUCER_LINGER_MS=100

# Batch Size: 64KB (cân bằng giữa latency và throughput)
KAFKA_PRODUCER_BATCH_SIZE_BYTES=65536

# Compression: lz4 (nhanh, tiết kiệm bandwidth)
KAFKA_PRODUCER_COMPRESSION_TYPE=lz4

# Queue Buffering: 100K messages (buffer khi broker chậm)
KAFKA_PRODUCER_QUEUE_BUFFERING_MAX_MESSAGES=100000

# Flush Timeout: 10s (thời gian chờ flush trước khi force)
KAFKA_PRODUCER_FLUSH_TIMEOUT_SECONDS=10

KAFKA_PRODUCER_ACKS=all
KAFKA_PRODUCER_ENABLE_IDEMPOTENCE=True
KAFKA_PRODUCER_MAX_REQUESTS_IN_FLIGHT=5
KAFKA_PRODUCER_RETRIES=2147483647
KAFKA_PRODUCER_RETRIES_BACKOFF=100
KAFKA_PRODUCER_REQUEST_TIMEOUT=30000
KAFKA_TOPIC_PARTITIONER=murmur2

# Storage Settings
CLICKHOUSE_URL=http://localhost:8123

COINGECKO_API_KEY=